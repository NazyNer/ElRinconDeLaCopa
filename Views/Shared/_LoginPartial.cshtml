@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav flex-row" style="gap:3rem;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item ml-2">
        <a class="casa nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="@User.Identity?.Name!"><i class="fa-solid fa-fingerprint"></i></a>
    </li>
     <li class="nav-item ml-2">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="casa nav-link btn btn-link text-white"><i class="fa-solid fa-right-from-bracket"></i></button>
        </form>
    </li> 
}
else
{
    <li class="nav-item ml-2">
        <a class="casa nav-link text-white" asp-area="Identity" asp-page="/Account/Login" title="Inicio"><i class="fa-solid fa-user"></i></a>
    </li>
}
</ul>
