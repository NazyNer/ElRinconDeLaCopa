<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElRinconDeLaCopa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.4.0-web/css/all.min.css">
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", false)
    @ViewData["LinkCss"]
</head>

<body>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
    <!-- Modal -->
    <div class="modal fade" id="ModalUsuario" tabindex="-1" data-bs-backdrop="static"  aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" id="header">
                    <h1 id="h1Categoria" class="modal-title fs-5 ">Datos personales</h1>
                </div>
                <div class="modal-body">
                    <div id="form-categoria" class="form-group">
                        <p class="text-white">por favor complete con su nombre completo para continuar</p>
                        <input name="Nombre" class="form-control" autocomplete="off" id="NombreCompleto" />
                        <span class="text-danger" id="lbl-error"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="w-100 btn btn-lg btn-primary" onclick="GuardarDatos()">Guardar</button>
                </div>
            </div>
        </div>
    </div>


    <header>
        <nav
            class="posicionav navbar-custom  fixed-top navbar navbar-expand-md navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid" id="navbar">
                <div class="Isologo">
                    <a class="logo text-white navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/logo.png" alt="Logo de la empresa">
                    </a>
                    <li class="limaq" style="--clr:#00ade1">
                        <a class="lia" asp-area="" asp-controller="Home" asp-action="Index"
                            data-text="&nbsp;ElRinconDeLaCopa">
                            &nbsp;ElRinconDeLaCopa&nbsp;</a>
                    </li>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="botonburger"><img width="64" height="64"
                            src="https://img.icons8.com/external-kiranshastry-lineal-kiranshastry/64/000000/external-menu-multimedia-kiranshastry-lineal-kiranshastry.png"
                            alt="external-menu-multimedia-kiranshastry-lineal-kiranshastry" /></span>
                </button>
                <div class=" navbar-collapse collapse  justify-content-between">
                    <ul class="navbar-nav navbar-center flex-row flex-wrap">
                        <li class="nav-item">
                            <a class="casa nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"
                                title="Inicio"><i class="fa-solid fa-house"></i></a>
                        </li>
                        @if(@User.IsInRole("Administrador") || @User.IsInRole("Empleado")){
                            <li class="nav-item">
                                <a class="casa nav-link text-white" asp-area="" asp-controller="Categoria"
                                    asp-action="Index" title="Categoria"><i class="fa-solid fa-tag"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="casa nav-link text-white" asp-area="" asp-controller="Producto" asp-action="Index"
                                    title="Producto"><i class="fa-solid fa-wine-bottle"></i></a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="casa nav-link text-white" asp-area="" asp-controller="Producto"
                                asp-action="Catalogo" title="Catalogo"><i class="fa-solid fa-globe"></i></a>
                        </li>
                        @if(@User.IsInRole("Administrador")){
                            <li class="nav-item">
                                <a class="casa nav-link text-white" asp-area="" asp-controller="Usuarios"
                                    asp-action="Index" title="Usuarios"><i class="fa-solid fa-users"></i></a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
    </header>
    <div class="container-sm container-md container-lg">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ElRinconDeLaCopa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome-free-6.4.0-web/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
